<div class="row">
  <div class="span6 offset3">
    <div class="well">
      <%= image_tag @pin.image %>
      <p><%= @pin.description %></p>
      <p>
        <%= link_to (image_tag @pin.user.avatar(:thumb)), profile_path(:id => @pin.user.id) %>
        <strong><%= link_to @pin.user.name, profile_path(:id => @pin.user.id) %></strong>
      </p>
      <% if current_user == @pin.user %>
        <%= link_to 'Edit', edit_pin_path(@pin) %> |
      <% end %>
      <%= link_to 'Back', pins_path %>
    </div>
  </div>
</div>
